                    {% endif %}

                    <button id="mobile-menu-toggle" class="lg:hidden inline-flex h-9 w-9 items-center justify-center rounded bg-transparent border-0">
                        <span class="sr-only">Меню</span>
                        <svg class="h-6 w-6 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke-width="2.5" style="stroke: var(--color-brand-secondary);">
                            <path id="hamburger-line-1" class="transition-all duration-200" stroke-linecap="round" stroke-linejoin="round" d="M4 6h16"></path>
                            <path id="hamburger-line-2" class="transition-all duration-200" stroke-linecap="round" stroke-linejoin="round" d="M4 12h16"></path>
                            <path id="hamburger-line-3" class="transition-all duration-200" stroke-linecap="round" stroke-linejoin="round" d="M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
