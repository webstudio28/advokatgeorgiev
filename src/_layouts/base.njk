                                            <div class="bg-neutral-900 border border-white/10 rounded-xl shadow-2xl overflow-hidden">
                                                <ul class="py-2">
                                                    {% for service in uslugi.items %}
                                                        <li>
                                                            <a href="{{ ('/uslugi/' ~ service.slug ~ '/') | url }}" class="block px-4 py-3 text-brand-accent hover:bg-white/5 hover:text-white transition">
                                                                {{ service.title }}
                                                            </a>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                    {% endif %}
                                    
                                    {% if item.label == "Съдебна практика" %}
