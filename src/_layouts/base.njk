                                            <div class="bg-neutral-900 border border-white/10 rounded-xl shadow-2xl overflow-hidden">
                                                <ul class="py-2">
                                                    {% for practice in sadebnaPraktika %}
                                                        <li>
                                                            <a href="{{ ('/sadebna-praktika/' ~ practice.slug ~ '/') | url }}" class="block px-4 py-3 text-brand-accent hover:bg-white/5 hover:text-white transition">
                                                                {{ practice.title }}
                                                            </a>
                                                        </li>
                                                    {% endfor %}
