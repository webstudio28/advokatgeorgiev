            <div class="container-custom flex items-center justify-between gap-3 p-4 min-h-16">
                <a href="{{ '/' | url }}" class="flex items-center gap-2">
                    <img src="{{ site.brand.logo.header | url }}" alt="{{ site.brand.logo.alt | default(site.brand.name) }}" class="h-10 w-10 lg:h-14 lg:w-14 object-contain">
                    <div class="text-brand-secondary text-base lg:text-xl font-medium font-serif leading-[0.95]">
