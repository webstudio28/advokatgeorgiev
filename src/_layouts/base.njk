                        {% if site.navigation %}
                            {% for item in site.navigation %}
                                <li class="relative group">
                                    <a href="{{ item.url | url }}" class="font-normal text-brand-accent hover:text-white transition flex items-center gap-1">
                                        {{ item.label }}
