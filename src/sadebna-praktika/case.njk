              const targetWidth = container.clientWidth;
              for (let pageNum = 1; pageNum <= pdf.numPages; pageNum++) {
                const page = await pdf.getPage(pageNum);
                const viewport = page.getViewport({ scale: 1 });
                const scale = Math.max(1, (targetWidth - 24) / viewport.width);
                const scaledViewport = page.getViewport({ scale });

                const canvas = document.createElement('canvas');
                canvas.style.display = 'block';
                canvas.style.width = '100%';
                canvas.style.height = 'auto';
                canvas.width = Math.floor(scaledViewport.width);
                canvas.height = Math.floor(scaledViewport.height);

                const wrapper = document.createElement('div');
                wrapper.className = 'p-3 border-b border-white/10 last:border-b-0 bg-neutral-950/20';
                wrapper.appendChild(canvas);
                container.appendChild(wrapper);

                const ctx = canvas.getContext('2d', { alpha: false });
                await page.render({ canvasContext: ctx, viewport: scaledViewport }).promise;
              }
            }

            function renderVisiblePdfs() {
              document.querySelectorAll('.pdf-viewer:not(.hidden) .pdfjs-embed').forEach(el => {
                renderPdfInto(el).catch(() => {
                  el.setAttribute('data-rendered', 'false');
                  el.innerHTML = '<div class="p-4 text-sm text-neutral-400">Неуспешно зареждане. Моля, използвайте бутона „Отвори / Изтегли PDF“.</div>';
                });
              });
            }

            const toggleButtons = document.querySelectorAll('.pdf-toggle-btn');
            toggleButtons.forEach(btn => {
              btn.addEventListener('click', function() {
                const targetIndex = this.getAttribute('data-target');
                const container = this.closest('[data-pdf-index]');
                const viewer = container.querySelector('.pdf-viewer');
                const isExpanded = this.getAttribute('aria-expanded') === 'true';
                
                if (isExpanded) {
                  viewer.classList.add('hidden');
                  this.setAttribute('aria-expanded', 'false');
                  this.querySelector('span').textContent = 'Покажи документ';
                  this.querySelector('svg').classList.remove('rotate-180');
                } else {
                  viewer.classList.remove('hidden');
                  this.setAttribute('aria-expanded', 'true');
                  this.querySelector('span').textContent = 'Скрий документ';
                  this.querySelector('svg').classList.add('rotate-180');

                  setTimeout(renderVisiblePdfs, 0);
                }
              });
            });

            renderVisiblePdfs();
          });
        </script>
      {% else %}
        <div class="rounded-2xl border border-white/10 bg-neutral-900/35 p-6 text-center">
          <p class="text-neutral-400">Няма налични документи за тази категория.</p>
        </div>
      {% endif %}
    {% endif %}
  </div>
</section>

