---
layout: base.njk
pagination:
  data: sadebnaPraktika
  size: 1
  alias: case
permalink: "/sadebna-praktika/{{ case.slug }}/"
eleventyComputed:
  title: "{{ case.meta.title }}"
  description: "{{ case.meta.description }}"
---

<section class="section-padding">
  <div class="container-custom">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-100 mb-4">
      {{ case.hero.title }}
    </h1>
    
    <p class="text-lg text-neutral-300 mb-8">
      {{ case.hero.subtitle }}
    </p>

    {% set categoryPdfs = sadebnaPraktikaPdfs[case.slug] %}
    {% if case.slug == 'aktualna-praktika' %}
      {# Tabbed interface for aktualna-praktika #}
      {% set aktualnaData = aktualnaPraktikaByYear %}
      {% if aktualnaData.years and aktualnaData.years.length > 0 %}
        <div class="aktualna-praktika-tabs">
          {# Year tabs #}
          <div class="flex flex-wrap gap-2 mb-6 border-b border-white/10 pb-4">
            {% for year in aktualnaData.years %}
              <button
                type="button"
                class="year-tab-btn px-4 py-2 rounded-lg text-sm font-medium transition {% if loop.index0 == 0 %}bg-brand-secondary/20 text-brand-secondary border border-brand-secondary/30{% else %}text-neutral-400 hover:text-neutral-200 border border-transparent{% endif %}"
                data-year="{{ year }}"
                {% if loop.index0 == 0 %}aria-selected="true"{% else %}aria-selected="false"{% endif %}
              >
                {{ year }}
              </button>
            {% endfor %}
          </div>

          {# Documents grouped by year #}
          {% for year in aktualnaData.years %}
            {% set yearDocs = aktualnaData.documentsByYear[year] %}
            <div class="year-content {% if loop.index0 != 0 %}hidden{% endif %}" data-year="{{ year }}">
              <div class="space-y-6">
                {% for pdf in yearDocs %}
                  {% set isFirst = loop.index0 == 0 %}
                  <div class="rounded-2xl border border-white/10 bg-neutral-900/35 p-4 md:p-6 shadow-[0px_4px_18px_0px_rgba(0,0,0,0.35)]" data-pdf-index="{{ loop.index0 }}">
                    <div class="flex justify-between items-center flex-col gap-4 md:flex-row mb-4">
                      {% if not isFirst %}
                        <button 
                          type="button"
                          class="pdf-toggle-btn text-base text-neutral-400 hover:text-neutral-200 transition flex items-center gap-2"
                          data-target="{{ loop.index0 }}"
                          aria-expanded="false"
                        >
                          <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                          </svg>
                          <span>Покажи документ</span>
                        </button>
                      {% else %}
                        <span></span>
                      {% endif %}
                      <a href="{{ pdf.url | url }}" target="_blank" rel="noopener" class="btn-brand w-full sm:w-auto">
                        Отвори / Изтегли PDF
                      </a>
                    </div>

                    <div class="pdf-viewer {% if not isFirst %}hidden{% endif %}">
                      <div class="overflow-hidden rounded-xl border border-white/10 bg-neutral-950/30">
                        <div
                          class="pdfjs-embed w-full max-h-[520px] md:max-h-[680px] overflow-auto"
                          data-pdf-url="{{ pdf.url | url }}"
                          data-rendered="false"
                        >
                          <div class="p-4 text-sm text-neutral-400">
                            Зареждане на документа…
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        </div>

        <script>
          document.addEventListener('DOMContentLoaded', function() {
            // --- PDF.js inline rendering (reliable on mobile) ---
            // We self-host PDF.js in /assets/vendor/pdfjs/ via scripts/copy-pdfjs.js
            let pdfjsReadyPromise = null;

            async function ensurePdfjs() {
              if (pdfjsReadyPromise) return pdfjsReadyPromise;
              pdfjsReadyPromise = (async () => {
                // Load pdf.js runtime module
                const pdfjsLib = await import('{{ "/assets/vendor/pdfjs/pdf.min.mjs" | url }}');
                // Set worker path
                pdfjsLib.GlobalWorkerOptions.workerSrc = '{{ "/assets/vendor/pdfjs/pdf.worker.min.mjs" | url }}';
                return pdfjsLib;
              })();
              return pdfjsReadyPromise;
            }

            async function renderPdfInto(container) {
              if (!container || container.getAttribute('data-rendered') === 'true') return;

              // If container is not visible, rendering will calculate a bad scale.
              const rect = container.getBoundingClientRect();
              if (rect.width < 20 || rect.height < 20) return;

              const pdfUrl = container.getAttribute('data-pdf-url');
              if (!pdfUrl) return;

              container.innerHTML = '';
              container.setAttribute('data-rendered', 'true');

              const pdfjsLib = await ensurePdfjs();
              const loadingTask = pdfjsLib.getDocument(pdfUrl);
              const pdf = await loadingTask.promise;

              // Render all pages vertically
              const targetWidth = container.clientWidth;
              for (let pageNum = 1; pageNum <= pdf.numPages; pageNum++) {
                const page = await pdf.getPage(pageNum);
                const viewport = page.getViewport({ scale: 1 });
                const scale = Math.max(1, (targetWidth - 24) / viewport.width); // small padding
                const scaledViewport = page.getViewport({ scale });

                const canvas = document.createElement('canvas');
                canvas.style.display = 'block';
                canvas.style.width = '100%';
                canvas.style.height = 'auto';
                canvas.width = Math.floor(scaledViewport.width);
                canvas.height = Math.floor(scaledViewport.height);

                const wrapper = document.createElement('div');
                wrapper.className = 'p-3 border-b border-white/10 last:border-b-0 bg-neutral-950/20';
                wrapper.appendChild(canvas);
                container.appendChild(wrapper);

                const ctx = canvas.getContext('2d', { alpha: false });
                await page.render({ canvasContext: ctx, viewport: scaledViewport }).promise;
              }
            }

            function renderVisiblePdfs() {
              document.querySelectorAll('.pdf-viewer:not(.hidden) .pdfjs-embed').forEach(el => {
                renderPdfInto(el).catch(() => {
                  // If rendering fails for any reason, allow retry later
                  el.setAttribute('data-rendered', 'false');
                  el.innerHTML = '<div class="p-4 text-sm text-neutral-400">Неуспешно зареждане. Моля, използвайте бутона „Отвори / Изтегли PDF“.</div>';
                });
              });
            }

            // Year tab switching
            const yearTabs = document.querySelectorAll('.year-tab-btn');
            yearTabs.forEach(tab => {
              tab.addEventListener('click', function() {
                const selectedYear = this.getAttribute('data-year');
                
                // Update tab states
                yearTabs.forEach(t => {
                  t.setAttribute('aria-selected', 'false');
                  t.classList.remove('bg-brand-secondary/20', 'text-brand-secondary', 'border-brand-secondary/30');
                  t.classList.add('text-neutral-400', 'border-transparent');
                });
                this.setAttribute('aria-selected', 'true');
                this.classList.add('bg-brand-secondary/20', 'text-brand-secondary', 'border-brand-secondary/30');
                this.classList.remove('text-neutral-400', 'border-transparent');
                
                // Show/hide year content
                document.querySelectorAll('.year-content').forEach(content => {
                  if (content.getAttribute('data-year') === selectedYear) {
                    content.classList.remove('hidden');
                  } else {
                    content.classList.add('hidden');
                  }
                });

                // Render PDFs that just became visible
                setTimeout(renderVisiblePdfs, 0);
              });
            });

            // PDF toggle buttons
            const toggleButtons = document.querySelectorAll('.pdf-toggle-btn');
            toggleButtons.forEach(btn => {
              btn.addEventListener('click', function() {
                const container = this.closest('[data-pdf-index]');
                const viewer = container.querySelector('.pdf-viewer');
                const isExpanded = this.getAttribute('aria-expanded') === 'true';
                
                if (isExpanded) {
                  viewer.classList.add('hidden');
                  this.setAttribute('aria-expanded', 'false');
                  this.querySelector('span').textContent = 'Покажи документ';
                  this.querySelector('svg').classList.remove('rotate-180');
                } else {
                  viewer.classList.remove('hidden');
                  this.setAttribute('aria-expanded', 'true');
                  this.querySelector('span').textContent = 'Скрий документ';
                  this.querySelector('svg').classList.add('rotate-180');

                  // Render when opened
                  setTimeout(renderVisiblePdfs, 0);
                }
              });
            });

            // Initial render for visible PDFs (first doc / first year)
            renderVisiblePdfs();
          });
        </script>
      {% else %}
        <div class="rounded-2xl border border-white/10 bg-neutral-900/35 p-6 text-center">
          <p class="text-neutral-400">Няма налични документи за тази категория.</p>
        </div>
      {% endif %}
    {% else %}
      {# Regular category view #}
      {% if categoryPdfs and categoryPdfs.length > 0 %}
        <div class="space-y-6">
          {% for pdf in categoryPdfs %}
            {% set isFirst = loop.index0 == 0 %}
            <div class="rounded-2xl border border-white/10 bg-neutral-900/35 p-4 md:p-6 shadow-[0px_4px_18px_0px_rgba(0,0,0,0.35)]" data-pdf-index="{{ loop.index0 }}">
              <div class="flex justify-between items-center flex-col gap-4 md:flex-row mb-4">
                {% if not isFirst %}
                  <button 
                    type="button"
                    class="pdf-toggle-btn text-base text-neutral-400 hover:text-neutral-200 transition flex items-center gap-2"
                    data-target="{{ loop.index0 }}"
                    aria-expanded="false"
                  >
                    <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                    <span>Покажи документ</span>
                  </button>
                {% else %}
                  <span></span>
                {% endif %}
                <a href="{{ pdf.url | url }}" target="_blank" rel="noopener" class="btn-brand w-full sm:w-auto">
                  Отвори / Изтегли PDF
                </a>
              </div>

              <div class="pdf-viewer {% if not isFirst %}hidden{% endif %}">
                <div class="overflow-hidden rounded-xl border border-white/10 bg-neutral-950/30">
                  <div
                    class="pdfjs-embed w-full max-h-[520px] md:max-h-[680px] overflow-auto"
                    data-pdf-url="{{ pdf.url | url }}"
                    data-rendered="false"
                  >
                    <div class="p-4 text-sm text-neutral-400">
                      Зареждане на документа…
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <script>
          document.addEventListener('DOMContentLoaded', function() {
            // --- PDF.js inline rendering (reliable on mobile) ---
            let pdfjsReadyPromise = null;

            async function ensurePdfjs() {
              if (pdfjsReadyPromise) return pdfjsReadyPromise;
              pdfjsReadyPromise = (async () => {
                const pdfjsLib = await import('{{ "/assets/vendor/pdfjs/pdf.min.mjs" | url }}');
                pdfjsLib.GlobalWorkerOptions.workerSrc = '{{ "/assets/vendor/pdfjs/pdf.worker.min.mjs" | url }}';
                return pdfjsLib;
              })();
              return pdfjsReadyPromise;
            }

            async function renderPdfInto(container) {
              if (!container || container.getAttribute('data-rendered') === 'true') return;

              const rect = container.getBoundingClientRect();
