{# Reusable UI helpers for sections/components #}

{% macro sectionHeader(eyebrow, title, subtitle) %}
  <div class="w-full text-left">
    {% if eyebrow %}
      <div class="text-xl font-thin tracking-wide text-brand-accent">{{ eyebrow }}</div>
    {% endif %}
    {% if title %}
      <h2 class="font-sans text-xl sm:text-3xl font-normal text-brand-secondary">
        {{ title }}
      </h2>
    {% endif %}
    {% if subtitle %}
      <p class="mt-3 text-sm text-neutral-200/80 max-w-3xl">
        {{ subtitle }}
      </p>
    {% endif %}
  </div>
{% endmacro %}


