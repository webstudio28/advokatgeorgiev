{# Home: Articles Preview #}
{% from "macros/ui.njk" import sectionHeader %}

<section class="section-padding bg-gradient-to-r from-[#232323] to-[#212121]">
  <div class="container-custom">
    {{ sectionHeader(home.articles.eyebrow, home.articles.title, null) }}

    <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {% for item in statiiList %}
        <a href="{{ ('/statii/' ~ item.slug ~ '/') | url }}" class="group flex flex-col rounded-2xl border border-white/20 bg-neutral-900/35 overflow-hidden shadow-[0px_4px_18px_0px_rgba(0,0,0,0.35)] hover:bg-neutral-900/45 transition">
          <div class="aspect-[16/9] w-full overflow-hidden bg-neutral-900">
            <img src="{{ item.hero.image | url }}" alt="{{ item.title }}" class="w-full h-full object-cover opacity-90 group-hover:opacity-100 transition">
          </div>
          <div class="p-5 flex flex-col flex-1">
            <div class="text-base font-semibold text-neutral-100">
              {{ item.title }}
            </div>
            <div class="mt-2 flex-1 text-sm text-neutral-400 leading-relaxed">
              {{ item.content.shortDescription }}
            </div>
            <div class="mt-4 pt-4 border-t border-white/10 flex items-center justify-between">
              <span class="text-sm text-brand-accent">Прочети повече</span>
              <span class="text-brand-accent transition group-hover:translate-x-0.5">→</span>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>


