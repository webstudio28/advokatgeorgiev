{# Home: Practice Areas #}
{% from "macros/ui.njk" import sectionHeader %}

<section class="section-padding bg-gradient-to-r from-stone-900 to-neutral-800">
  <div class="container-custom">
    {{ sectionHeader(home.practiceAreas.eyebrow, home.practiceAreas.title, null) }}

    <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {% for item in home.practiceAreas.items %}
        <a href="{{ item.url | url }}" class="group rounded-2xl border border-white/10 bg-neutral-900/30 p-5 shadow-[0px_4px_18px_0px_rgba(0,0,0,0.35)] hover:bg-neutral-900/45 transition">
          <div class="text-base font-semibold text-neutral-100">
            {{ item.title }}
          </div>
          <div class="mt-3 text-sm text-neutral-400 leading-relaxed">
            {{ item.text }}
          </div>
          <div class="mt-5 pt-4 border-t border-white/10 flex items-center justify-between">
            <span class="text-sm text-brand-accent">Виж повече</span>
            <span class="text-brand-accent transition group-hover:translate-x-0.5">→</span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>


