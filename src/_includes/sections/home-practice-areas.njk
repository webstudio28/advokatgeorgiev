{# Home: Practice Areas #}
{% from "macros/ui.njk" import sectionHeader %}

<section class="section-padding bg-gradient-to-r from-[#1E1E1E] to-[#212121]">
  <div class="container-custom">
    {{ sectionHeader(home.practiceAreas.eyebrow, home.practiceAreas.title, null) }}

    <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {% for item in uslugi.items %}
        <a href="{{ ('/uslugi/' ~ item.slug ~ '/') | url }}" class="group flex flex-col rounded-2xl border border-white/10 bg-neutral-700/30 p-5 shadow-[0px_4px_18px_0px_rgba(0,0,0,0.35)] hover:bg-neutral-800/45 transition">
          <div class="text-base font-semibold text-neutral-100 ">
            {{ item.title }}
          </div>
          <div class="mt-3 flex-1 text-sm text-neutral-400 leading-relaxed">
            {{ item.content.shortDescription }}
          </div>
          <div class="mt-4 pt-2 border-t flex items-center justify-between " style="border-top: 0.2m; border-color: rgba(222, 173, 121, 0.5);">
            <span class="text-sm text-brand-secondary">Виж повече</span>
            <span class="text-brand-secondary text-lg transition group-hover:translate-x-0.5">→</span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>


